{
  "manifest_version": 3,
  "name": "Pocket Scout v3.0",
  "version": "3.0.0",
  "description": "10-Minute Cyclic Signals with Multi-Indicator Analysis by Claude Opus",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://pocketoption.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://pocketoption.com/*"],
      "js": [
        "circular-buffer.js",
        "technical-indicators.js",
        "cyclic-decision-engine.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pocket Scout Dynamic Time"
  }
}

